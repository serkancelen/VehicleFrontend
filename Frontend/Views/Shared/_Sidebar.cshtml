<div class="left-sidenav">
    <!-- LOGO -->
    <div class="brand">
        <a asp-controller="home" asp-action="index" class="logo">
            <span>
                <img src="~/images/logo-sm.png" alt="logo-small" class="logo-sm">
            </span>
            <span>
                <img src="~/images/logo.png" alt="logo-large" class="logo-lg logo-light">
                <img src="~/images/logo-dark.png" alt="logo-large" class="logo-lg logo-dark">
            </span>
        </a>
    </div>
    <!--end logo-->
    <div class="menu-content h-100" data-simplebar>
        <ul class="metismenu left-sidenav-menu">
            <li class="menu-label mt-0">@Localizer["Main"]</li>
            <li>
                <a href="javascript: void(0);"> <i data-feather="home" class="align-self-center menu-icon"></i><span>@Localizer["Dashboard"]</span><span class="menu-arrow"><i class="mdi mdi-chevron-right"></i></span></a>
                <ul class="nav-second-level" aria-expanded="false">
                    <li class="nav-item"><a class="nav-link" asp-controller="home" asp-action="index"><i class="ti-control-record"></i>@Localizer["Ana Sayfa"]</a></li>
                </ul>
            </li>
            <li>
                <a href="javascript: void(0);"><i data-feather="file-plus" class="align-self-center menu-icon"></i><span>@Localizer["Sayfalar"]</span><span class="menu-arrow"><i class="mdi mdi-chevron-right"></i></span></a>
                <ul class="nav-second-level" aria-expanded="false">
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="Vehicles"><i class="ti-control-record"></i>@Localizer["Araçlar"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="Devices"><i class="ti-control-record"></i>@Localizer["Cihazlar"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="DeviceVehicles"><i class="ti-control-record"></i>@Localizer["Cihaz'a Bağlı Araçlar"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="Drivers"><i class="ti-control-record"></i>@Localizer["Sürücüler"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="DriverVehicle"><i class="ti-control-record"></i>@Localizer["Sürücü'ye Bağlı Araç"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="Packet"><i class="ti-control-record"></i>@Localizer["Paketler"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="PacketContent"><i class="ti-control-record"></i>@Localizer["Packet İçerikleri"]</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="PeriodicMaintenance"><i class="ti-control-record"></i>@Localizer["Araç Bakım Period"]</a></li>
                    @*   <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="TarckingDataAcc"><i class="ti-control-record"></i>İzleme Verileri Paket ACC</a></li>
                    <li class="nav-item"><a class="nav-link" asp-action="index" asp-controller="TrackingDataStd"><i class="ti-control-record"></i>İzleme Verileri Paket STD</a></li>
                    *@
                </ul>
            </li>
        </ul>

        <div class="update-msg text-center">
            <a href="javascript: void(0);" class="float-end close-btn text-muted" data-dismiss="update-msg" aria-label="Close" aria-hidden="true">
                <i class="mdi mdi-close"></i>
            </a>
            <h5 class="mt-3">@Localizer["Uwingo Academy"]</h5>
            <p class="mb-3">@Localizer["Uwingo Araç Takip Sistemleri Yönetim Paneli"]</p>
        </div>
    </div>
</div>
